@model VGSShop.Models.Contact

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminHome" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminContacs" asp-action="Index">Danh sách thông tin liên hệ</a>
            <span class="breadcrumb-item active">Xóa thông tin : @Model.Name</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin liên hệ : @Model.Name</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>

                    <tr>
                        <td>Tên </td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <td>Xác nhận XÓA:</td>
                        <td>
                            <form asp-controller="AdminContacts" asp-action="Delete" asp-route-id="@Model.Id">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="XÁC NHẬN XÓA" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>