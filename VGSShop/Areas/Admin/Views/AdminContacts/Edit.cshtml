@model VGSShop.Models.Contact

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <span class="breadcrumb-item active">Chỉnh sửa thông tin liên hệ</span>
        </nav>
    </div>
</div>
<form asp-action="Edit" asp-route-id="@Model.Id" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Tên</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Name" placeholder="Tên">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-3 col-form-label">Số điện thoại</label>
            <div class="col-sm-6">
                <input type="number" class="form-control" asp-for="Phone" placeholder="Điện thoại liên lạc">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Email" placeholder="Email">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Địa chỉ</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Address" placeholder="Địa chỉ">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Nội dung</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Content" placeholder="Nội dụng">
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Lưu lại</button>
            </div>
        </div>
    </div>
</form>